{
  "name": "@oviato/wallie",
  "version": "0.0.0",
  "description": "React component library for Bitcoin Ordinals, forked from @ordzaar",
  "repository": "https://github.com/ordlify/wallie",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "files": [
    "dist/*",
    "index.d.ts",
    "magiceden.d.ts",
    "unisat.d.ts",
    "xverse.d.ts",
    "leather.d.ts"
  ],
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./magiceden": {
      "import": "./dist/magiceden.js",
      "require": "./dist/magiceden.cjs"
    },
    "./unisat": {
      "import": "./dist/unisat.js",
      "require": "./dist/unisat.cjs"
    },
    "./xverse": {
      "import": "./dist/xverse.js",
      "require": "./dist/xverse.cjs"
    },
    "./leather": {
      "import": "./dist/leather.js",
      "require": "./dist/leather.cjs"
    },
    "./okx": {
      "import": "./dist/okx.js",
      "require": "./dist/okx.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "tsc && vite build --watch",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@bitcoinerlab/secp256k1": "1.1.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@swc/core": "^1.7.23",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "@wallet-standard/core": "^1.0.3",
    "autoprefixer": "^10.4.20",
    "bignumber.js": "9.1.2",
    "bip32": "4.0.0",
    "bip39": "3.1.0",
    "bitcoin-address-validation": "2.2.3",
    "bitcoinjs-message": "2.2.0",
    "buffer-reverse": "1.0.1",
    "cross-fetch": "4.0.0",
    "cssnano": "^7.0.6",
    "ecpair": "2.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.8",
    "happy-dom": "^13.10.1",
    "postcss": "^8.4.45",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sats-connect": "1.4.1",
    "tailwindcss": "3.3.2",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vite-plugin-css-injected-by-js": "^3.5.1",
    "vite-plugin-dts": "3.7.3",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-node-polyfills": "^0.22.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.19",
    "bignumber.js": "^9.1.2",
    "bitcoinjs-lib": "6.1.6"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
